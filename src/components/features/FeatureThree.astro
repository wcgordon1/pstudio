---
const sections = [
  {
    id: 1,
    tagline: "Because why not",
    title: "Innovative financial solutions for every situation",
    description:
      "Discover a variety of tools, services, and expert guidance tailored to your unique financial needs.",
    features: [
      { icon: "iconOne", description: "Clear data visibility" },
      { icon: "iconTwo", description: "Reduced external factors" },
      { icon: "iconThree", description: "enhanced stabilty" },
      { icon: "iconFour", description: "accelerated times" },
    ],
    image: "/widget1.svg",
  },
  {
    id: 2,
    tagline: "Because why not",
    title: "Innovative financial solutions for every situation",
    description:
      "Explore diverse financial tools and expert advice customized for your distinct needs.",
    features: [
      { icon: "iconFive", description: "Transparent Data Access" },
      { icon: "iconSix", description: "Lowered  Interference" },
      { icon: "iconSeven", description: "Improved Reliability" },
      { icon: "iconEight", description: "Faster Processing Times" },
    ],
    image: "/widget2.svg",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-32 max-w-screen-xl">
    <div class="flex flex-col gap-24">
      {
        sections.map((section, index) => (
          <div
            class={`grid grid-cols-1 gap-8 md:grid-cols-2 md:gap-24 items-center ${index % 2 !== 0 ? "md:flex-row-reverse" : ""}`}
          >
            <div>
              <span class="text-blue-600 uppercase font-mono font-medium tracking-tight text-xs">
                {section.tagline}
              </span>
              <p class="text-4xl mt-8 tracking-tighter font-semibold text-blue-950">
                {section.title}{" "}
                <span class="md:block md:text-transparent md:bg-clip-text md:bg-gradient-to-r from-blue-500 to-indigo-600 py-2">
                  solutions for every situation
                </span>
              </p>
              <p class="text-sm max-w-sm mt-4 text-gray-700">
                {section.description}
              </p>
              <div class="mt-6 text-xs font-medium grid grid-cols-1 sm:grid-cols-2 md:grid-cols-1 lg:grid-cols-2 gap-2 text-blue-950">
                {section.features.map((feature) => (
                  <div
                    key={feature.icon}
                    class="inline-flex items-center gap-2 font-mono uppercase tracking-tighter text-xs text-indigo-700"
                  >
                    {feature.icon === "iconOne" && (
                      <svg
                        class="icon icon-tabler text-blue-700 size-4 icon-tabler-360"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M17 15.328c2.414 -.718 4 -1.94 4 -3.328c0 -2.21 -4.03 -4 -9 -4s-9 1.79 -9 4s4.03 4 9 4" />
                        <path d="M9 13l3 3l-3 3" />
                      </svg>
                    )}
                    {feature.icon === "iconTwo" && (
                      <svg
                        class="icon icon-tabler text-blue-700 size-4 icon-tabler-antenna-bars-3"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M6 18l0 -3" />
                        <path d="M10 18l0 -6" />
                        <path d="M14 18l0 .01" />
                        <path d="M18 18l0 .01" />
                      </svg>
                    )}
                    {feature.icon === "iconThree" && (
                      <svg
                        class="icon icon-tabler text-blue-700 size-4 icon-tabler-load-balancer"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M12 13m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                        <path d="M12 20m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
                        <path d="M12 16v3" />
                        <path d="M12 10v-7" />
                        <path d="M9 6l3 -3l3 3" />
                        <path d="M12 10v-7" />
                        <path d="M9 6l3 -3l3 3" />
                        <path d="M14.894 12.227l6.11 -2.224" />
                        <path d="M17.159 8.21l3.845 1.793l-1.793 3.845" />
                        <path d="M9.101 12.214l-6.075 -2.211" />
                        <path d="M6.871 8.21l-3.845 1.793l1.793 3.845" />
                      </svg>
                    )}
                    {feature.icon === "iconFour" && (
                      <svg
                        class="icon icon-tabler text-blue-700 size-4 icon-tabler-brand-speedtest"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M5.636 19.364a9 9 0 1 1 12.728 0" />
                        <path d="M16 9l-4 4" />
                      </svg>
                    )}
                    {feature.icon === "iconFive" && (
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="icon icon-tabler icon-tabler-database text-blue-700 size-4"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M12 6m-8 0a8 3 0 1 0 16 0a8 3 0 1 0 -16 0" />
                        <path d="M4 6v6a8 3 0 0 0 16 0v-6" />
                        <path d="M4 12v6a8 3 0 0 0 16 0v-6" />
                      </svg>
                    )}
                    {feature.icon === "iconSix" && (
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="icon icon-tabler icon-tabler-building text-blue-700 size-4"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M3 21l18 0" />
                        <path d="M9 8l1 0" />
                        <path d="M9 12l1 0" />
                        <path d="M9 16l1 0" />
                        <path d="M14 8l1 0" />
                        <path d="M14 12l1 0" />
                        <path d="M14 16l1 0" />
                        <path d="M5 21v-16a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v16" />
                      </svg>
                    )}
                    {feature.icon === "iconSeven" && (
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="icon icon-tabler icon-tabler-augmented-reality-2 text-blue-700 size-4"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M10 21h-2a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h8a2 2 0 0 1 2 2v3.5" />
                        <path d="M17 17l-4 -2.5l4 -2.5l4 2.5v4.5l-4 2.5z" />
                        <path d="M13 14.5v4.5l4 2.5" />
                        <path d="M17 17l4 -2.5" />
                        <path d="M11 4h2" />
                      </svg>
                    )}
                    {feature.icon === "iconEight" && (
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="icon icon-tabler icon-tabler-time-duration-0 text-blue-700 size-4"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M3 12v.01" />
                        <path d="M21 12v.01" />
                        <path d="M12 21v.01" />
                        <path d="M12 3v.01" />
                        <path d="M7.5 4.2v.01" />
                        <path d="M16.5 4.2v.01" />
                        <path d="M16.5 19.8v.01" />
                        <path d="M7.5 19.8v.01" />
                        <path d="M4.2 16.5v.01" />
                        <path d="M19.8 16.5v.01" />
                        <path d="M19.8 7.5v.01" />
                        <path d="M4.2 7.5v.01" />
                        <path d="M10 11v2a2 2 0 1 0 4 0v-2a2 2 0 1 0 -4 0z" />
                      </svg>
                    )}
                    <span class="text-blue-950 font-medium text-sm">{feature.description}</span>
                  </div>
                ))}
              </div>
            </div>
            <div class={`h-full ${index % 2 === 0 ? "md:order-first" : ""}`}>
              <img
                src={section.image}
                alt=""
                class="rounded-xl bg-gray-200 shadow-box shadow-gray-500/30 overflow-hidden tilt-card"
              />
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
