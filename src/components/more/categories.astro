const categories = [
  {
    title: "Design",
    link: "/studios/categories/Design"
  },
  {
    title: "Development",
    link: "/studios/categories/Development"
  },
  {
    title: "SEO",
    link: "/studios/categories/Design"
  },
  {
    title: "Wordpress",
    link: "/studios/categories/Development"
  },
  {
