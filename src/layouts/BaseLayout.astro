---
import BaseHead from "@/components/BaseHead.astro";
import Banner from "@/components/global/Banner.astro";
import Navigation from "@/components/global/Navigation.astro";
import Footer from "@/components/global/Footer.astro";

const { 
  title,
  description,
  url,
  socialImage,
  twitterImage,
  author
} = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead 
      title={title}
      description={description}
      url={url}
      socialImage={socialImage}
      twitterImage={twitterImage}
      author={author}
    />
  </head>
  <body
    class="bg-gray-100 flex flex-col min-h-screen mx-auto 2xl:max-w-screen-4xl"
  >
    <Banner />
    <Navigation />
    <main class="flex-grow"><slot /></main>
    <Footer />

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.0/vanilla-tilt.min.js"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"></script>
    <script type="text/javascript">
      //https://micku7zu.github.io/vanilla-tilt.js/
      VanillaTilt.init(document.querySelectorAll(".tilt-card"), {
        max: 35, // max tilt rotation (degrees)
        speed: 2500, // Speed of the enter/exit transition
        transition: true, // Set a transition on enter/exit.
      });
    </script>

  </body>
</html>
